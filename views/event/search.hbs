<div class="container">
    <h1 class="search-heading">Upcoming Events</h1>
    <div class="search-bar">
        <form action="/event/search" method="GET" class="d-flex">
            <input name="eventTitle" class="form-control me-2 search-input-field" type="text"
                placeholder="Look for an event near you" value="{{searchTerm}}" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>

    <div class="recipes-collection-div">
        <div class="search-event-details img-fluid search-create-event">
         <a href="/event/new"><button class="read-more-event">Create an Event</button></a>
    </div>
        {{#each event}}
        <div class="search-event-details">
            <a href="/event/{{id}}"><img src="{{cloudinaryResize img "c_fill,w_400,h_300"}}" alt="image of {{title}}" class="img-fluid"></a>
             <h2><a href="/event/{{id}}">{{title}}</a></h2>
             <p>⏰{{startDate}}, {{startTime}} - {{endTime}}</p>
             <h6>📍 {{location}}</h6>
            <a href="/event/{{id}}"><button class="read-more-event">Find Out More</button></a>

        </div>

        {{/each}}
    </div>
</div>
